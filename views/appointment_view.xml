<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <!-- hospital.appointment tree view -->
        <record id="hospital_appointment_view_tree" model="ir.ui.view">
            <field name="name">hospital.appointment.view.tree</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <tree decoration-success="state == 'done'"
                    decoration-info="state == 'draft'"
                    decoration-danger="state == 'cancel'"
                    decoration-warning="state == 'in_consultation'">
                    <field name="patient_id"/>
                    <field name="ref" optional="show"/>
                    <field name="gender" optional="hide"/>
                    <field name="doctor_id" widget="many2one_avatar"/>
                    <field name="appointment_time"/>
                    <field name="booking_date" optional="show"/>
                    <field name="activity_ids" widget="list_activity"/>
                    <field name="state" 
                            decoration-success="state == 'done'"
                            decoration-info="state == 'draft'"
                            decoration-danger="state == 'cancel'"
                            decoration-warning="state == 'in_consultation'"
                            widget="badge"/>
                </tree>
            </field>
        </record>

        <!-- hospital.appointment form view -->
        <record id="hospital_appointment_view_form" model="ir.ui.view">
            <field name="name">hospital.appointment.view.form</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <form crete="0" delete="0" edit="0">
                    <header>
                        <field name="state" widget="statusbar" nolabel="1" options="{'clickable': '1'}" statusbar_visible="draft,in_consultation,done"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="priority" widget="priority" class="mr-3"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <!-- Add your fields here -->
                                <field name="patient_id"/>
                                <field name="ref"/>
                                <field name="gender"/>
                                <field name="doctor_id" widget="many2one_avatar"/>
                                <field name="booking_date" help="Booking of Date"/>
                            </group>
                            <group>
                                <field name="appointment_time"/>
                                <button name="action_test" string="Object Button" help="A message" confirm="Are you sure executive action?" type="object" class="oe_highlight"/>
                                <button name="%(om_hospital.hospital_appointment_action)d" string="Action Button" help="On click button" confirm="Are you sure open patient action?" type="action" class="oe_highlight"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="Prescription" string="prescription">
                                <field name="prescription" placeholder="Enter your prescription" options="{'collaborative': true}"/>
                            </page>
                            <page name="Pharmacy" string="pharmacy">
                                
                            </page>
                        </notebook>
                    </sheet>
                    <!-- chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- hospital.appointment filter search -->
        <record id="hospital_appointment_view_search" model="ir.ui.view">
            <field name="name">hospital.appointment.view.search</field>
            <field name="model">hospital.appointment</field>
            <field name="arch" type="xml">
                <search>
                    <!-- Add your fields here -->
                    <group>
                    </group>
                    <searchpanel>
                    </searchpanel>

                </search>
            </field>
        </record>

        <!-- hospital.appointment action window -->
        <record id="hospital_appointment_action" model="ir.actions.act_window">
            <field name="name">Appointment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hospital.appointment</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                    Create your first appointment !
                </p>
            </field>
        </record>

        <!-- This Menu Item Must have a parent -->
        <menuitem id="appointment_menu_categ" name="Appointment" action="hospital_appointment_action" parent="appointment_master_menu_categ" sequence="0"/>

</odoo>
